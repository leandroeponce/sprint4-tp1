<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Editar Superhéroe</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <% layout('layout') -%>
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <h2 class="text-2xl font-bold text-center mb-4">Editar Superhéroe</h2>

        <% if (errores && errores.length > 0) { %>
            <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
                <ul class="list-disc list-inside">
                    <% errores.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <form action="/api/heroes/edit/<%= datos._id %>?_method=PUT" method="POST" class="space-y-4">
            <!-- Campo oculto con el ID del superhéroe para actualizar -->
            <input type="hidden" name="id" value="<%= datos._id %>">

            <div>
                <label for="nombreSuperHeroe" class="block font-semibold">Nombre del Superhéroe</label>
                <input type="text" id="nombreSuperHeroe" name="nombreSuperHeroe" value="<%= datos.nombreSuperHeroe %>" class="w-full border p-2 rounded" required>
            </div>

            <div>
                <label for="nombreReal" class="block font-semibold">Nombre Real</label>
                <input type="text" id="nombreReal" name="nombreReal" value="<%= datos.nombreReal %>" class="w-full border p-2 rounded" required>
            </div>

            <div>
                <label for="edad" class="block font-semibold">Edad</label>
                <input type="number" id="edad" name="edad" value="<%= datos.edad %>" class="w-full border p-2 rounded" required>
            </div>

            <div>
                <label for="poderes" class="block font-semibold">Poderes (separados por coma)</label>
                <input type="text" id="poderes" name="poderes" value="<%= datos.poderes.join(', ') %>" class="w-full border p-2rounded" required>
            </div>

            <div>
                <label for="planetaOrigen" class="block font-semibold">Planeta de Origen</label>
                <input type="text" id="planetaOrigen" name="planetaOrigen" value="<%= datos.planetaOrigen %>" class="w-full border p-2 rounded">
            </div>

            <div>
                <label for="debilidad" class="block font-semibold">Debilidad</label>
                <input type="text" id="debilidad" name="debilidad" value="<%= datos.debilidad %>" class="w-full border p-2 rounded">
            </div>

            <div>
                <label for="aliados" class="block font-semibold">Aliados (separados por coma)</label>
                <input type="text" id="aliados" name="aliados" value="<%= datos.aliados?.join(', ') %>" class="w-full border p-2 rounded">
            </div>

            <div>
                <label for="enemigos" class="block font-semibold">Enemigos (separados por coma)</label>
                <input type="text" id="enemigos" name="enemigos" value="<%= datos.enemigos?.join(', ') %>" class="w-full border p-2 rounded">
            </div>
            <button type="submit" class="bg-blue-600 text-white p-2 rounded hover:bg-blue-700 mt-4">
                Guardar Cambios
            </button>
        </form>
    </div>
</body>
</html>
